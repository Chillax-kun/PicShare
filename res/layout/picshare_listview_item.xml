<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    android:padding="5dp" >

            <TextView
                android:id="@+id/picshare_listview_item_title"
                android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:padding="5dp"
    			android:text="生存还是毁滅"
    			android:textSize="18sp"
    			android:textColor="#404040"
    			android:ellipsize="end"
    			android:maxLines="2" />
            
            <TextView
                android:id="@+id/picshare_listview_item_date"
                android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:padding="5dp"
    			android:layout_marginBottom="5dp"
    			android:gravity="right"
    			android:text="9月25日"
    			android:textSize="14sp"
    			android:textColor="#e0e0e0" />
            
            <ImageView
                android:id="@+id/picshare_listview_item_img"
                android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:padding="5dp"
    			android:scaleType="centerCrop"
    			android:src="@drawable/picshare_listview_img"  />
            
             <TextView
                android:id="@+id/picshare_listview_item_msg"
                android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:text="生存还是毁滅, 這是一個值得思考的問題. -- 哈姆霄特"
    			android:layout_marginTop="10dp"
    			android:padding="5dp"
    			android:textSize="14sp"
    			android:textColor="#a0a0a0"
    			android:ellipsize="end"
    			android:maxLines="4" />
             
             
             <TextView
                android:id="@+id/picshare_listview_item_msg"
                android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:gravity="right"
    			android:text="查看全文"
    			android:padding="5dp"
    			android:layout_marginTop="10dp"
    			android:layout_marginBottom="10dp"
    			android:textSize="16sp"
    			android:textColor="#404040"
    			android:ellipsize="end"
    			android:maxLines="4" />
</LinearLayout>
    